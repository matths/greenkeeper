@import 'normalize'
@import 'jeet'

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

body
  font-family 'Cabin Condensed', Arial, sans-serif
  font-size  12px

header
  height 60px
  background-color #232429
  h1
    text-transform uppercase
    color #78b63d
    line-height 60px
    margin 0 0 0 20px

sidebar
  col(2/12, gutter: 0)
  height calc(100% - 60px)
  display none

  &.left
    background-color #2f313c

  &.right
    background-color #d5dadd

  @media only screen and (min-width: 640px)
    display block

  .badges
    position absolute;
    bottom 0

x-app
  @media only screen and (min-width: 640px)
    col(8/12, gutter: 0)

x-taskloop, x-latesttasks
  cf()
  display block

x-latesttasks
  x-task
    padding 10px 0

x-taskloop
  overflow hidden
  position relative
  x-task
    height 100%

x-task
  cf()
  display block
  border-top 1px solid #000
  position relative
  &:last-child
    border-bottom 1px solid #000

  div
    col(3/5 8/12, gutter: 0)
    div.event
      width: 20px
      position absolute
      top 0
      bottom 0
      left 0
    div.text-box
      margin-left 30px
      h2
        color #76b729
        margin 10px 0 0 0
      p
        font-size 14px
        margin 0 0 10px 0

  div.avatar-container
    col(1/5 8/12, gutter: 0)
    img
      border-radius(5px)
  h3
    col(1/5 8/12, gutter: 0)
    position absolute
    font-size 9px
    bottom 0
    right 0
